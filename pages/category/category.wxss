/* pages/category/category.wxss */
.bgc-container{
  width:100%;
  /* height:228rpx; */
  height:17.091454vh;
  background-color: #5bc1c2;
  position:fixed;
  top:0;
  z-index:-1;
}
.navBar{
  width:110rpx;
  font-size:36rpx;
  font-weight:bold;
  color:#ffffff;
  font-family: STXihei Regular, STXihei Regular-Regular;
  margin:0 auto;
  display:flex;
  align-items: center;
  justify-content: center;
}
.backBtn{
  position:absolute;
  left:45rpx;
  display:flex;
  align-items:center;
}
.backBtn_img{
  width:40rpx;
  height:50rpx;
}
.title{
  margin:0 20rpx 0 10rpx;
  /* height:100rpx; */
  height:7.496251vh;
  display:flex;
  align-items: center;
  line-height:7.496251vh;
}
.title_scroll{
  white-space:nowrap;
}
.title_text{
  height:7.496251vh;
  display:inline-block;
  margin:0 10rpx;
  color:#ffffff;
}
.active{
  color:#094daa;
  font-size:36rpx;
  font-weight: 700;
}

.drugList{
  display:flex;
  margin:0 10rpx;
  border-bottom:1rpx solid rgba(0,0,0,.16);
}
.drugListImg{
  flex:1;
  height:250rpx;
}
.text_info{
  flex:2;
  padding:20rpx;
}
.text_intro{
  width:450rpx;
  white-space:nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
  font-size:36rpx;
  color:#000000;
  margin-top:25rpx;
}
.text_count{
  width:450rpx;
  white-space:nowrap;
  overflow: hidden;
  text-overflow:ellipsis;
  font-size:30rpx;
  color:#333232;
  margin-top:25rpx;
}
.text_price{
  font-size:40rpx;
  color:#f40606;
  margin-top:25rpx;
}
.drug-scroll{
  /* height:1106rpx; */
  height:82.908545vh;
}
/* 隐藏滚动条 */
.drug-scroll ::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
.title_scroll ::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;

}