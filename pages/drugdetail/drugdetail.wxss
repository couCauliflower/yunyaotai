/* pages/drugdetail/drugdetail.wxss */
.wrap_body{
  width:100%;
  height:100vh;
  background-color:#f4f4f4;
  position:fixed;
  top:0;
  z-index:-11;
}
.titleBar{
  width:500rpx;
  height:100rpx;
  margin:0 auto;
  display:flex;
  justify-content: space-evenly;
  align-items: center;
}
.top{
  width:750rpx;
  background-color: #fff;
}
.title_text{
  font-size:40rpx;
  color:#030303;
}
.active{
  color:#094daa;
}
.swiperimage{
  width:750rpx;
}
/* swiperContainer决定轮播图高度 */
.swiperContainer{
  height:480rpx;
  /* background-color: red; */
  overflow:hidden;

}
.purchase{
  display:flex;
  background-color: #fff;
  padding:15rpx;
  border-radius:0 0 35rpx 35rpx;
}
.purchase_left{
  flex:2;
}
.drugname{
  font-size:40rpx;
}
.restnumber{
  font-size:26rpx;
  color:#4c4a4a;
  margin-top:10rpx;
}
.price{
  flex:1;
  display:flex;
  align-items: center;
  justify-content: center;
  color:#ed0909;
  font-size:48rpx;
}
.info{
  padding:25rpx;
  background-color: #fff;
  margin:20rpx 0;
  border-radius: 25rpx;
}
.infoList{
  margin-top:15rpx;
}
.info-left{
  font-size:32rpx;
  font-weight:600;
}
.info-right{
  font-size:32rpx;
}

.comment{
  padding:20rpx;
  background-color: #fff;
  border-radius: 25rpx;
}
.comment_title{
  border-bottom:1rpx solid rgba(0,0,0,.2);
  padding:20rpx;
}
.list{
  border-bottom:1rpx solid rgba(0,0,0,.2);
  padding-bottom:10rpx;
}
.main{
  font-size:40rpx;
  font-weight: 600;
}
.num{
  font-size:30rpx;
  margin-left:10rpx;
}
.user{
  margin:20rpx 0;
  position:relative;
}
.faceurl{
  width:100rpx;
  height:100rpx;
  vertical-align: middle;
  border-radius: 50%;
}
.nick{
  margin-left:30rpx;
  font-weight: 600;
}
.time{
  position: absolute;
  top:50%;
  transform: translate(0,-50%);
  right:20rpx;
}
.comment_detail{
  height:60rpx;
  line-height:60rpx;
  font-size:36rpx;
}
.scroll{
  height:75.562218vh;
  position:relative;
}
.scroll ::-webkit-scrollbar{
  height:0;
  width:0;
  color:transparent;
}
.bottom{
  width:710rpx;
  height:7.34632vh;
  background-color: #fff;
  position:fixed;
  bottom:0;
  display:flex;
  padding:0 20rpx;
  align-items: center;
  border-top:1rpx solid rgba(0,0,0,.2);
}
.message{
  flex:1;
  height:86rpx;
  background-color:#0d75cd;
  border-radius:43rpx;
}
.purchaseBtn{
  height:86rpx;
  flex:1;
  display:flex;
  align-items: center;
  justify-content: center;
  background-color: #e0122b;
  color:#ffffff;
  font-size:40rpx;
  border-radius:43rpx;
}
.message{
  flex:1;
  display:flex;
  align-items: center;
  justify-content: center;
}
.message_img{
  width:80rpx;
  height:80rpx;
}
.buyToast{
  width:750rpx;
  height:100vh;
  position:fixed;
  top:0;
  z-index:11;
}
.gray{
  width:750rpx;
  height:18.139430vh;
  background-color:rgba(0,0,0,.5);
}
.buyPage{
  width:750rpx;
  height:81.86057vh;
  background-color: #fff;
}
.buyPageTop{
  padding:15rpx;
  position:relative;
  border-bottom: 1rpx solid rgba(0,0,0,.2);
  margin-bottom: 10rpx;
}
.pic{
  width:300rpx;
  height:300rpx;
  vertical-align:middle;
}
.dollar{
  color:#f50c0c;
  margin-left:30rpx;
}
.delete{
  width:50rpx;
  height:50rpx;
  position:absolute;
  top:40rpx;
  right:30rpx;
}
.buyPageMiddle{
  padding:15rpx;
  display:flex;
  vertical-align: middle;
}
.middelText{
  flex:2;
  font-size:44rpx;
  font-weight: 600;
}
.storage{
  flex:2;
}
.buyCount{
  display:flex;
  margin-right:20rpx;
}
.add{
  width:45rpx;
  height:45rpx;
}
.account{
  margin:0 10rpx;
}
.sub{
  width:45rpx;
  height:45rpx;
}
.buyPageBottom{
  width:600rpx;
  height:80rpx;
  background-color: red;
  border-radius:40rpx;
  position:fixed;
  bottom:18rpx;
  left:75rpx;
  text-align: center;
  line-height:80rpx;
  color:#ffffff;
  font-size:38rpx;
}
.toast{
  position:fixed;
  padding:10rpx;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:rgba(0,0,0,.5);
  z-index:99;
  color:#ffffff;
}