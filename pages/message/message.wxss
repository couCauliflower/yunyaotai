/* pages/message/message.wxss */
.graybgc{
  position:fixed;
  width:750rpx;
  height:90.40479vh;
  background-color: rgb(247, 243, 243);
  z-index:-1;
  bottom:0;
}
.title{
  width:700rpx;
  height:150rpx;
  line-height:150rpx;
  padding:0 25rpx;
  background-color: #fff;
}
.list{
  width:700rpx;
  height:130rpx;
  margin:20rpx 0;
  padding:0 25rpx;
  background-color: #fff;
  line-height:130rpx;
  border-radius:40rpx;
  position:relative;
}
.faceurl{
  width:100rpx;
  height:100rpx;
  vertical-align:middle;
  border-radius:50%;
}
.list_nick{
  font-weight:600;
  font-size:40rpx;
  margin-left:20rpx;
}
.list_info{
  font-size:25rpx;
  margin-left:50rpx;
  margin-right:100rpx;
}
.message{
  position:absolute;
  right:50rpx;
  color:#0914f4;
}
.scroll{
  height:90.40479vh;
}
.scroll ::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}
.showMessage{
  width:750rpx;
  height:100vh;
  position:fixed;
  top:0;
  z-index:11;
}
.gray{
  width:750rpx;
  height:18.139430vh;
  background-color:rgba(0,0,0,.5);
}
.container_wrap{
  width:750rpx;
  height:81.86057vh;
  background-color: #fff;
}
.top{
  width:720rpx;
  height:150rpx;
  line-height:150rpx;
  padding:15rpx;
  position:relative;
}
.top_img{
  width:50rpx;
  height:50rpx;
  position:absolute;
  top:40rpx;
  right:30rpx;
}
.bottom{
  position:fixed;
  bottom:0;
  width:720rpx;
  padding:15rpx;
  height:70rpx;
  display:flex;
  justify-content:space-between;
  align-items: center;
}
.input{
  height:46rpx;
  background-color:#e4e1e0;
  margin-left:80rpx;
  border-radius:28rpx;
  padding:5rpx;
  padding-left:12rpx;
  font-size:30rpx;
}
.send{
  width:154rpx;
  height:52rpx;
  line-height:52rpx;
  opacity: 0.64;
background: #f8af06;
border-radius: 26px;
margin-right:80rpx;
text-align: center;
}
.send_text{
  color:#040404;
  font-size:30rpx;
}
.top_text{
  color: #050505;
  font-size:44rpx;
  font-weight: 500;
  margin-left:30rpx;
}
.toast{
  position:fixed;
  padding:10rpx;
  top:50%;
  left:50%;
  transform: translate(-50%,-50%);
  background-color:rgba(0,0,0,.5);
  z-index:99;
  color:#ffffff;
}