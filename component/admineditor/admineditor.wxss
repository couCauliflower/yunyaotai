.wrap_body{
  width:100%;
  height:100vh;
  background-color:#f4f4f4;
  position:fixed;
  top:0;
  z-index:-11;
}
.drugImg{
  width:710rpx;
  height:438rpx;
  text-align:center;
  background-color: #fff;
  margin-bottom:15rpx;
  padding:20rpx;
}
.drugurl{
  width:600rpx;
  height:420rpx;
}

.info{
  width:710rpx;
  background-color: #fff;
  border-radius:15rpx;
  margin:0 auto;
  padding:10rpx;
}
.name{
  display:flex;
  height:100rpx;
  align-items: center;
  border-bottom:1rpx solid rgba(0,0,0,.2);
}
.name_text{
  color: #030303;
  margin-left:41rpx;
  font-size:36rpx;
  margin-right:38rpx;
}
.name_input{
  color: #4c4b4b;
  font-size:30rpx;
}
.intro{
  display:flex;
  height:300rpx;
  align-items: center;
  border-bottom:1rpx solid rgba(0,0,0,.2);
}
.intro_text{
  color: #030303;
  margin-left:41rpx;
  font-size:36rpx;
  margin-right:38rpx;
}
.intro_area{
  color: #4c4b4b;
  font-size:30rpx;
  width:450rpx;
  height:200rpx;
}

.add{
  height:90rpx;
  width:720rpx;
  background-color: #0651fa;
  position:fixed;
  bottom:10rpx;
  left:15rpx;
  border-radius:45rpx;
  line-height:90rpx;
  text-align: center;
  color:#ffffff;
  font-size:40rpx;
}
.scroll{
  height:82.908545vh;
}
.scroll ::-webkit-scrollbar{
  width:0;
  height:0;
  color:transparent;
}